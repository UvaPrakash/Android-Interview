<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uva.androidinterview.FrontPage">

    <Button
        android:id="@+id/bsq"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/button_custom"
        android:text="@string/sq"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/btq"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/button_custom"
        android:text="@string/tq"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:layout_alignTop="@+id/bsq"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bseeotherapps"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/button_custom"
        android:text="@string/see_other_apps"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:layout_alignTop="@+id/brateapp"
        android:layout_alignStart="@+id/btq" />

    <Button
        android:id="@+id/brateapp"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/button_custom"
        android:text="@string/rate_app"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp" />
</RelativeLayout>
